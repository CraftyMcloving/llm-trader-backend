services:
  - type: web
    name: ai-trade-advisor-api
    env: python
    plan: starter
    buildCommand: pip install -r requirements.txt
    startCommand: uvicorn app.main:app --host 0.0.0.0 --port $PORT
    envVars:
      - key: API_KEY
        sync: false
      - key: EXCHANGE
        value: binance
      - key: QUOTE
        value: USDT
      - key: TOP_N
        value: 25
      - key: CACHE_TTL_SEC
        value: 1800
